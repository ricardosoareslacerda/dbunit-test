<?xml version="1.0" encoding="ISO-8859-1" ?>
<Configuration status="warn" name="testes" packages=""
	monitorInterval="30" >
	<Properties>
		<Property name="logDir">log</Property>
		<Property name="appName">testes</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %p [%t] %m%n" />
		</Console>
		<RollingFile name="testes-LOGFILE" fileName="${logDir}\${appName}.log"
			filePattern="${logDir}\${appName}-%d{yyyy-MM-dd-HH}-%i.log">
			<PatternLayout pattern="%d %p [%t] %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="6"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j.xml" level="debug">
			<AppenderRef ref="testes-LOGFILE" />
		</Logger>
		<Logger name="org.apache.logging" level="debug">
			<AppenderRef ref="testes-LOGFILE" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="testes-LOGFILE" />
		</Root>
	</Loggers>
</Configuration>